{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container text-center">
        <div class="card text-center">
            <img src="{{ asset('assets/images/' ~ produit.photo) }}" class="w-25" style="margin-left: 37.5%;">
            <div class="card-title"><strong>{{produit.nom}}</strong></div>
            <div class="card-body">
                Il y a |trans {{produit.quantite}} {{produit.nom}} en stock |trans
            </div>
           

        </div>
        <a href="{{path('remove', {id: produit.id})}}" class="btn btn-danger  w-25 m-5">{{"Supprimer le produit" |trans}}</a>

        {{form(panierForm)}}
    </div>
{% endblock %}
